def ficha(nome = '<desconhecido>', qdade_gols = 0):
    print(f'O jogador {nome} fez {qdade_gols} gol(s) no campeonato.')

#Programa Principal
n = str(input('Nome do Jogador: '))
g = str(input('NÃºmero de Gols: '))
if g.isnumeric():
    g = int(g)
else:
    g = 0
if n.strip() == '':
    ficha(qdade_gols=g)
else:
    ficha(n, g)
